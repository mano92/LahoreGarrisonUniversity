@model IEnumerable<LahoreGarrisonUniversity.Models.Job>

@{
    ViewBag.Title = "Index";
}
<style>
    .table {
        margin: 0;
        padding: 0;
        display: table;
        table-layout: fixed;
        width: 100%;
        max-width: 100%;
    }

    .row {
        display: table-row;
    }

    .cell {
        display: table-cell;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="row">
    <div class="span12">
        <div class="portlet">
            <h4 class="portlet-title">
                <u>All Student</u>
            </h4>
            <!-- /widget-header -->
            <div class="portlet-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JobReference)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MinimumSalary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaximumSalary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.hours)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationForm)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailToApply)
                        </th>
                        <th style="width: 15%"></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.JobReference)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.MinimumSalary)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.MaximumSalary)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.hours)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.ApplicationForm)
                            </td>
                            <td class='cell'>
                                @Html.DisplayFor(modelItem => item.EmailToApply)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /widget-content -->
        </div>
    </div>
</div>

