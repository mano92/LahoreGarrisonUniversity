@model IEnumerable<LahoreGarrisonUniversity.Models.EnrollCourse>

@{
    ViewBag.Title = "Enroll Course";
}
<style>
.row {
        display: table-row;
    }

    .cell {
        display: table-cell;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    </style>

<div class="row">
    <div class="span12">
        <div class="portlet">
            <h4 class="portlet-title">
                <u>Enrolled Course Status</u>
            </h4>
            <!-- /widget-header -->
            <div class="portlet-body">
                <p>
                    @Html.ActionLink("Enroll Course", "Create")
                </p>
                <p><br /></p>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayName("Student Registration Id")
                        </th>
                        <th>
                            @Html.DisplayName("Course Code")
                        </th>
                        <th>
                            @Html.DisplayName("Enroll Date")
                        </th>
                        <th style="width: 15%"></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Student.RegistrationId)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Course.Code)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.EnrollDate)
                            </td>
                            <td class="cell">
                                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollCourseId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /widget-content -->
        </div>
    </div>
</div>



