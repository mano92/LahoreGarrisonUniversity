@model List<LahoreGarrisonUniversity.Models.AssignCourse>

@{
    ViewBag.Title = "Assign Course";
}
<style>
    .row {
        display: table-row;
    }

    .cell {
        display: table-cell;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>



<div class="row">
    <div class="span12">
        <div class="portlet">
            <h4 class="portlet-title">
                <u>Assigned Course</u>
            </h4>
            <!-- /widget-header -->
            <div class="portlet-body">
                <p>
                    @Html.ActionLink("Assign New Course", "Create")
                </p>
                <p><br /></p>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayName("Department")
                        </th>
                        <th>
                            @Html.DisplayName("Teacher")
                        </th>
                        <th>
                            @Html.DisplayName("Credit Taken")
                        </th>
                        <th>
                            @Html.DisplayName("Remaing Credit")
                        </th>
                        <th>
                            @Html.DisplayName("Course")
                        </th>
                        <th style="width: 15%"></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Department.Code)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Teacher.Name)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.CreditTaken)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.RemaingCredit)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Course.Code)
                            </td>
                            @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.AssignCourseId }) |
                        @Html.ActionLink("Details", "Details", new { id=item.AssignCourseId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.AssignCourseId })
                    </td>*@
                        </tr>
                    }

                </table>

            </div>
            <!-- /widget-content -->
        </div>
    </div>
</div>

