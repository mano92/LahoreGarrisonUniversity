@model IEnumerable<LahoreGarrisonUniversity.Models.FrontEndCourse>

@{
    ViewBag.Title = "Index";
}
<style>
    .row {
        display: table-row;
    }

    .cell {
        display: table-cell;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="row">
    <div class="span12">
        <div class="portlet">
            <h4 class="portlet-title">
                <u>All Courses Details</u>
            </h4>
            <!-- /widget-header -->
            <div class="portlet-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Flag)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Semester)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditHourTheory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditHourPractical)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Level)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentLevel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseStructure)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageUrl)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecommendedBooks)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrerequsiteCourse)
                        </th>
                        <th style="width: 15%"></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Flag)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Semester)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Duration)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.CreditHourTheory)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.CreditHourPractical)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Level)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.StudentLevel)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.CourseStructure)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.ImageUrl)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.RecommendedBooks)
                            </td>
                            <td class="cell">
                                @Html.DisplayFor(modelItem => item.PrerequsiteCourse)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>