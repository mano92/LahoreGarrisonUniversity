@model LahoreGarrisonUniversity.Models.News

    @{
        ViewBag.Title = Model.Title;
    }

    <div class="page-content">
        <div class="row page-row">
            <div class="news-wrapper col-md-8 col-sm-7">
                <article class="news-item">
                    <p class="meta text-muted">By: <a href="#">@Model.UserName</a> | Posted on: @Model.CreatedAt</p>
                    <p class="featured-image"><img class="img-responsive" src="@Model.MediaUrl" alt=""></p>
                    <p>
                        @Model.Description
                    </p>
                </article><!--//news-item-->
            </div><!--//news-wrapper-->
            <aside class="page-sidebar  col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                @Html.Partial("~/Areas/FrontEnd/Views/Shared/Widgets/_Address.cshtml")
                @Html.Partial("~/Areas/FrontEnd/Views/Shared/Widgets/_DownloadProspectus.cshtml")
            </aside>
        </div><!--//page-row-->
    </div>

