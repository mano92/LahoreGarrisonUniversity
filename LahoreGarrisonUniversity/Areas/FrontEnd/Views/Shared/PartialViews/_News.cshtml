<div id="news-list" class="carousel-inner">
    <div id="active-item" class ="item active">
        
    </div>
    <div id="nonactive-item" class="item">

    </div>
</div>

<script type="text/javascript">
    //debugger;
    $.ajax({
        type: "GET",
        contentType: "application/json; charset=utf-8",
        url: "/FrontEnd/Home/GetNews/",
        data: "{}",
        dataType: "json",
        success: function (data) {
            debugger;
            $.each(data, function (index, item) {
                //debugger;
                if (index < 3) {
                    $('#active-item').append(
                    '<div class="col-md-4 news-item">' +
                    '<h2 class="title"><a href="@Url.Action("NewsDetails", "Home", new { id = string.Empty })' + item.Id + '">' + item.Title + '</a></h2>' +
                    '<img class="thumb" src="' + item.MediaUrl + '" alt="">' +
                    '<p>' + item.Description + '</p>' +
                    '<a class="read-more" href="@Url.Action("NewsDetails", "Home", new { id = string.Empty })' + item.Id + '">Read more<i class="fa fa-chevron-right"></i></a>' +
                    '</div>');
                } else {
                    $('#nonactive-item').append(
                    '<div class="col-md-4 news-item">' +
                    '<h2 class="title"><a href="@Url.Action("NewsDetails", "Home", new { id = string.Empty })' + item.Id + '">' + item.Title + '</a></h2>' +
                    '<img class="thumb" src="' + item.MediaUrl + '" alt="">' +
                    '<p>' + item.Description + '</p>' +
                    '<a class="read-more" href="@Url.Action("NewsDetails", "Home", new { id = string.Empty })' + item.Id + '">Read more<i class="fa fa-chevron-right"></i></a>' +
                    '</div>');
                }
            });
        },
        error: function (xhr, err) {
            debugger;
            alert("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
            alert("responseText: " + xhr.responseText);
        }
    });
</script>
