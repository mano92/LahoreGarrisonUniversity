<script type="text/javascript">
    //debugger;
    $.ajax({
        type: "GET",
        contentType: "application/json; charset=utf-8",
        url: "/FrontEnd/Home/GetNews/",
        data: "{}",
        dataType: "json",
        success: function (data) {
            debugger;
            $.each(data, function (index, item) {
                debugger;
                //now you can access properties using dot notation
                $('.news-item').append(
                    '<figure class="thumb col-md-2 col-sm-3 col-xs-3"><img src="' + item.MediaUrl + '" alt=""></figure>' +
                        '<div class="details col-md-10 col-sm-9 col-xs-9">' +
                        '<h4 class="title"><a href="@Url.Action("NewsDetails", "Home", new { id = string.Empty })/'+ item.Id+'">' +
                        item.Title + '</a></h4></div>' );
            });
        },
        error: function (xhr, err) {
            debugger;
            alert("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
            alert("responseText: " + xhr.responseText);
        }
    });
</script>
