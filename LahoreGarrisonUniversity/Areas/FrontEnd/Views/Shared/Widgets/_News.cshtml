@model IEnumerable<LahoreGarrisonUniversity.Models.News>

<section class="widget has-divider">
    <h3 class="title">Other News</h3>
    @foreach (var item in Model)
    {
        <article class="news-item row">
            <figure class="thumb col-md-2 col-sm-3 col-xs-3">
                <img src="@item.MediaUrl" alt="">
            </figure>
            <div class="details col-md-10 col-sm-9 col-xs-9">
                <h4 class="title"><a href="@Url.Action("NewsDetails", "Home", new { id = item.Id })">@item.Title</a></h4>
            </div>
        </article><!--//news-item-->
    }
</section>
